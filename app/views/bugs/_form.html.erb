<%= form_with(model: bug, local: true) do |form| %>
  <% if bug.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bug.errors.count, "error") %> prohibited this bug from being saved:</h2>

      <ul>
      <% bug.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title , "Title"%>
    <%= form.text_field :title, id: :bug_title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description , "Description"%>
    <%= form.text_field :description, id: :bug_description, class: "form-control" %>
  </div>



  <div class="field">
    <%= form.label :issue_type %>
    <!--<%= form.text_field :issue_type, id: :bug_issue_type %>-->
    <%= form.select :issue_type, Bug.issue_types.keys, selected: @bug.issue_type %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <!--<%= form.text_field :priority, id: :bug_priority %>-->
    <%= form.select :priority, Bug.priorities.keys, selected: @bug.priority %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.select :user_id,
    options_for_select(User.all.collect {|a| ["#{a.lname},#{a.fname}", a.id]},
    selected: (@bug.user ? @bug.user.id : User.first.id)), {} %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <!--<%= form.text_field :status, id: :bug_status %>-->
    <%= form.select :status, Bug.statuses.keys, selected: @bug.status %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
