<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th class="col-md-3">Lname</th>
      <th class="col-md-3">Fname</th>
      <th class="col-md-3">Email</th>
      <th class="col-md-3">Thumbnail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="col-md-3"><%= user.lname %></td>
        <td class="col-md-3"><%= user.fname %></td>
        <td class="col-md-3"><%= user.email %></td>
        <td class="col-md-3"><%= user.thumbnail %></td>

        <td class="col-md-3">
          <%= link_to user, class: "btn btn-success btn-sm" do %>
          <i></i> Show
          <% end %>

          <%= link_to edit_user_path(user), class: "btn btn-default btn-sm" do %>
          <i></i> Edit
          <% end %>

          <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" do %>
          <i></i> Delete
          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, :class => "btn btn-primary" %>
