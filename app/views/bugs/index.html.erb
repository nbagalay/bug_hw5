<p id="notice"><%= notice %></p>

<h1>Bugs</h1>

<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th class="col-md-3">Title</th>
      <th class="col-md-3">Description</th>
      <th class="col-md-3">Issue type</th>
      <th class="col-md-3">Priority</th>
      <th class="col-md-3">Status</th>
      <th class="col-md-3">User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <tr>
        <td class="col-md-3"><%= bug.title %></td>
        <td class="col-md-3"><%= bug.description %></td>
        <td class="col-md-3"><%= bug.issue_type %></td>
        <td class="col-md-3"><%= bug.priority %></td>
        <td class="col-md-3"><%= bug.status %></td>
        <td class="col-md-3"><%= (bug.user.try(:fname)) || "NA" %> <%= (bug.user.try(:lname)) || "NA" %></td>

        <td class="col-md-3">
          <%= link_to bug, class: "btn btn-success btn-sm" do %>
          <i></i> Show
          <% end %>

          <%= link_to edit_bug_path(bug), class: "btn btn-default btn-sm" do %>
          <i></i> Edit
          <% end %>

          <%= link_to bug, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" do %>
          <i></i> Delete
          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bug', new_bug_path, :class => "btn btn-primary" %>
