<div class="jumbotron">
  <div class="container">
    <h1>Oh Snap Bug Tracker System!</h1>
    <p>Life is a breeze when you can <i>snap</i> away your issues.</p>
    <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more &raquo;</a></p>
  </div>
</div>

<div class="container">

  <div class="row">
    <% @bugs.each do |bug| %>
        <div class="col-md-4">
          <h2><%= bug.title%></h2>
          <p><%=bug.description.truncate_words(30)%></p>
          <p>
            <%= link_to 'Read more >', bug, class: "btn btn-default"%>
          </p>
        </div>
      <% end %>
    </div>
  </div>

  <hr>

  <footer>
    <p>&copy; 2018 Bagalay, Inc.</p>
  </footer>
</div>
